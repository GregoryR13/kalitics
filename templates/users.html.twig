{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<style>

</style>

    <h1>Ajouter un utilisateur</h1>

{{ form(formUsers) }}

    <h1>Liste des utilisateurs</h1>

        <table>
            <thead>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Matricule</th>
                <th></th>
                <th></th>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.matricule }}</td>
                    <td><a href="{{ path('editUser', {'id': user.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('delUser', {'id': user.id}) }}">Supprimer</a></td>
                </tr>
            {% else %} <tr><td colspan="6">Aucun utilisateur trouvé.</td></tr>
            {% endfor %}
            </tbody>
        </table>



{% endblock %}
